        "/rfoluplaoddocuments": {
            "post": {
                "tags": [
                    "admins"
                ],
                "summary": "uplaod 4 documents related to the request submission or update(National Address Subscription Certificate, Logo ,Trademark registration certificate, other)",
                "description": "uplaod 4 documents related to the request submission or update(National Address Subscription Certificate, Logo ,Trademark registration certificate, other)",
                "operationId": "rfoluplaoddocuments",
                "consumes": [
                    "based on uploaded file type (application/pdf, image/png ....)"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Appian-API-Key",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "Appian-Document-Name",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "RequestId",
                        "in": "query",
                        "required": true,
                        "type": "integer",
                        "minimum": 1
                    },
                    {
                        "name": "DocumentType",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "enum": [
                            "NationalAddressSubscriptionCertificate",
                            "Logo",
                            "TrademarkRegistrationCertificate",
                            "Other",
                            "OperationalPlan"
                        ]
                    },
                    {
                        "in": "body",
                        "name": "document",
                        "description": "document to be uploaded in binary representation",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "binary",
                            "example": "document"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "document uploaded to Appian Successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "DocumentId": {
                                    "type": "integer",
                                    "example": 1923
                                }
